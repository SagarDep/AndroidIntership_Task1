<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/scrollView_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        style="@style/LinearLayout"
        android:orientation="vertical">

        <LinearLayout
            style="@style/LinearLayout"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/text_bottom_top_margin" >

            <TextView
                style="@style/TextView_Base"
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/text_bottom_top_margin"
                android:text="@string/tv_branch"/>

            <TextView
                style="@style/TextView_Base"
                android:textColor="@color/tv_status_text_color"
                android:background="@drawable/rounded_textview"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/tv_status"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            style="@style/LinearLayout"
            android:layout_marginBottom="@dimen/text_bottom_top_margin"
            android:layout_marginTop="@dimen/text_bottom_top_margin"
            android:gravity="center_horizontal" >

            <TextView
                style="@style/TextView_Base"
                android:layout_weight="2"
                android:text="@string/tv_created_text"/>

            <TextView
                style="@style/TextView_Base"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/tv_created_date"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            style="@style/LinearLayout"
            android:layout_marginBottom="@dimen/text_bottom_top_margin"
            android:layout_marginTop="@dimen/text_bottom_top_margin"
            android:gravity="center_horizontal" >

            <TextView
                style="@style/TextView_Base"
                android:layout_weight="2"
                android:text="@string/tv_registered_text"/>

            <TextView
                style="@style/TextView_Base"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/tv_registered_date"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            style="@style/LinearLayout"
            android:layout_marginBottom="@dimen/text_bottom_top_margin"
            android:layout_marginTop="@dimen/text_bottom_top_margin"
            android:gravity="center_horizontal" >

            <TextView
                style="@style/TextView_Base"
                android:layout_weight="2"
                android:text="@string/tv_resolve_text"/>

            <TextView
                style="@style/TextView_Base"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/tv_resolve_date"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            style="@style/LinearLayout"
            android:layout_marginBottom="@dimen/text_bottom_top_margin"
            android:layout_marginTop="@dimen/text_bottom_top_margin"
            android:gravity="center_horizontal" >

            <TextView
                style="@style/TextView_Base"
                android:layout_weight="2"
                android:text="@string/tv_responsible_text"/>

            <TextView
                style="@style/TextView_Base"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/tv_responsible_name"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:layout_marginBottom="@dimen/text_bottom_top_margin"
            android:layout_marginTop="@dimen/text_bottom_top_margin"
            android:text="@string/tv_description"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</ScrollView>