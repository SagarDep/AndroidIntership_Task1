<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/nav_header_background_color"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <com.example.sck.androidintership_task1.utils.RobotoTextView
        android:id="@+id/nav_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/nav_header_title_text_color"
        android:textSize="@dimen/nav_title_text_size"
        android:textStyle="bold"
        android:text="@string/nav_header_title_text"
        android:layout_marginBottom="@dimen/nav_title_text_marginBottom"
        android:layout_marginLeft="@dimen/nav_title_text_marginLeft"
        android:layout_marginStart="@dimen/nav_title_text_marginLeft"/>

</LinearLayout>
