<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--MainActivity theme.-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListItemText_Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="ListItemText_14sp" parent="ListItemText_Base">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_item_14sp_text_size</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.69</item>
    </style>

    <!-- DetailActivity theme. -->
    <style name="AppThemeDetail" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/detailColorPrimary</item>
        <item name="colorPrimaryDark">@color/detailColorPrimaryDark</item>
        <item name="colorAccent">@color/detailColorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- This would set the toolbar's background color -->
        <item name="android:background">@color/detailColorPrimary</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/text_color_white</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="DetailTextView_Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/detail_base_text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">"Arial"</item>
    </style>

    <style name="DetailTextView_LeftSide" parent="DetailTextView_Base">
        <item name="android:textColor">@color/detail_text_leftside_color</item>
    </style>

    <style name="DetailTextView_RightSide" parent="DetailTextView_Base">
        <item name="android:textColor">@color/detail_text_rightside_color</item>
    </style>

</resources>
